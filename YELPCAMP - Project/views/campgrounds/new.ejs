<% layout("layouts/boilerplate.ejs") %>
    <form action="/campgrounds" method="post">
        <div>
            <label for="title">Name</label>
            <input type="text" name="campground[title]" id="title">
            <!-- When our data is sent via post request, everything in req.body is stored in
                campground -->
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" name="campground[location]" id="location">
        </div>
        <button type="submit">Add Campground</button>
    </form>

    <footer>
        <a href="/campgrounds">Cancel</a>
    </footer>
    
</body>
</html>